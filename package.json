{
  "name": "vini-movies",
  "version": "0.1.0",
  "description": "Monorepo para o 'Desafio Elite Dev': uma aplicação full-stack de lista de filmes usando NestJS, React, PostgreSQL e Turborepo.",
  "main": "index.js",
  "author": "Vinícius Silva Santos",
  "license": "ISC",
  "packageManager": "pnpm@10.18.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/viniciussis/Vini_Movies"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "test": "echo \"Error: no test specified\" && exit 1",
    "tree": "bash -c \"tree -I 'node_modules|dist' > project-structure.tree\"",
    "diff": "git diff HEAD > changes.diff",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "typecheck": "tsc --noEmit",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "lint-staged": {
    "*.ts": "eslint --fix",
    "*.js": "eslint --fix"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "eslint": "^9.37.0",
    "husky": "^8.0.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "monorepo",
    "turborepo",
    "pnpm",
    "nestjs",
    "react",
    "typescript",
    "postgresql",
    "tanstack-query",
    "tanstack-router",
    "zod",
    "mui",
    "movies",
    "tmdb",
    "desafio-elite-dev"
  ]
}